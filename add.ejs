                                          </div>
                                          <div class="form-group">
                                            <label>Size:</label>
                                            <input type="number" placeholder="Enter size" id="inputClientCompany" class="form-control" name="size" required>
                                          </div>
                                          <div class="form-group">
                                            <label>Stock:</label>
                                            <input type="number" placeholder="Enter stock" id="inputProjectLeader" class="form-control" name="stock" required>
                                          </div>
                                          <div class="form-group">
                                            <label>Cost price:</label>
                                            <input type="number" id="inputProjectLeader" placeholder="Enter cost price" class="form-control" name="cp" required>
                                          </div>
                                          <div class="form-group">
                                            <label>Selling price:</label>
                                            <input type="number" id="inputProjectLeader" placeholder="Enter selling price" class="form-control" name="sp" required>
